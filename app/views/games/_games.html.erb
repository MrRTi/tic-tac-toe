<div class="games-list">
  <% if games.present? %>
    <h2 class="mdc-typography--headline2">
      <%= t "prev_games.title" %>
    </h2>

    <div class="mdc-data-table">
      <div class="mdc-data-table__table-container">
        <table class="mdc-data-table__table" aria-label=<%= t "prev_games.title" %>>
          <thead>
            <tr class="mdc-data-table__header-row">
              <th class="mdc-data-table__header-cell" role="columnheader" scope="col">
                <%= t "prev_games.headers.game_number" %>
              </th>
              <th class="mdc-data-table__header-cell" role="columnheader" scope="col">
                <%= t "prev_games.headers.status" %>
              </th>
            </tr>
          </thead>

          <tbody class="mdc-data-table__content">
            <% games.map do |game| %>
              <tr class="mdc-data-table__row">
                <th class="mdc-data-table__cell" scope="row">
                  <%= link_to "Game ##{game.id}", game_path(game), class: "mdc-button" %>
                </th>
                <td class="mdc-data-table__cell">
                  <span class="game-status">
                    <% if game.finished? %>
                      <%= "#{game.moves.last.symbol.upcase} won" %>
                    <% else %>
                      <%= t "game.state.#{game.state}" %>
                    <% end %>
                  </span>
                </td>
              </tr>
            <% end %>

          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>
